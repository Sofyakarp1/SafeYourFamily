<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_50"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="53dp"
        app:layout_constraintGuide_percent="0.5" />

    <View
        android:id="@+id/bottomCircle"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:background="@drawable/light_green_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_50" />


    <TextView
        android:id="@+id/infoDangerous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="272dp"
        android:text="Привет, юзер1"
        android:textColor="#C3000000"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.937" />

    <TextView
        android:id="@+id/phone"
        style="@style/CustomTextViewTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="24dp"
        android:text="Телефон:"
        app:layout_constraintEnd_toStartOf="@+id/infoDangerous"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoDangerous"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/value_phone_d"
        style="@style/CustomTextViewThemeInFrame"
        android:layout_width="250dp"
        android:layout_height="44dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_edit_text_white"
        app:layout_constraintStart_toStartOf="@+id/phone"
        app:layout_constraintTop_toBottomOf="@+id/phone"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/value_address_d"
        style="@style/CustomTextViewThemeInFrame"
        android:layout_width="255dp"
        android:layout_height="77dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_edit_text_white"
        app:layout_constraintStart_toStartOf="@+id/address"
        app:layout_constraintTop_toBottomOf="@+id/address"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/address"
        style="@style/CustomTextViewTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Адрес:"
        app:layout_constraintStart_toStartOf="@+id/value_phone_d"
        app:layout_constraintTop_toBottomOf="@+id/value_phone_d"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/dangerous"
        style="@style/CustomTextViewTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Телефоны экстренных служб:"
        app:layout_constraintStart_toStartOf="@+id/value_address_d"
        app:layout_constraintTop_toBottomOf="@+id/value_address_d"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/value_dangerous"
        style="@style/CustomTextViewThemeInFrame"
        android:layout_width="256dp"
        android:layout_height="143dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/bg_edit_text_white"
        android:text="МЧС и пожарная охрана 01\nПолиция 02\nСкорая медицинская помощь 03
"
        app:layout_constraintStart_toStartOf="@+id/dangerous"
        app:layout_constraintTop_toBottomOf="@+id/dangerous"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>